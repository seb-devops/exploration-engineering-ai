{
  "name": "exploration-engineering-ai",
  "version": "1.0.0",
  "description": "Repository to practice and study best practices to create a proper service that serve an agent",
  "main": "dist/app.js",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "predev": "pnpm --filter @exploration/agent build",
    "build": "npx tsc --noEmitOnError false || (echo 'Build completed with type errors (agent builds separately via Turbo)' && exit 0)",
    "dev": "tsx watch src/bin/www.ts",
    "prebuild": "pnpm --filter @exploration/agent build",
    "start": "node dist/bin/www.js",
    "type-check": "npx tsc -b tsconfig.workspace.json",
    "test": "vitest run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@exploration/agent": "workspace:*",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.2.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pug": "^3.0.3"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^2.0.67",
    "@mastra/core": "^0.24.1",
    "@mastra/evals": "^0.14.4",
    "@mastra/libsql": "^0.16.2",
    "@mastra/loggers": "^0.10.19",
    "@mastra/memory": "^0.15.11",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.3",
    "@types/http-errors": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.10.1",
    "supertest": "^7.1.0",
    "tsx": "^4.19.2",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.3",
    "zod": "^4.1.12"
  }
}
