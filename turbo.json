{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "packages/**/dist/**", ".next/**", "!.next/cache/**", ".mastra/**"],
      "env": ["OPENAI_API_KEY", "NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["OPENAI_API_KEY", "NODE_ENV", "PORT"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    }
  }
}

